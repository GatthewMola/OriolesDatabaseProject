CREATE TABLE Hitting(
	AB SMALLINT,
	H SMALLINT,
    AVG FLOAT,
	Doubles SMALLINT,
	Triples SMALLINT,
	HR SMALLINT,
	BB SMALLINT,
	OBP FLOAT,
	SLG FLOAT,
	OPS FLOAT,
    player_id INT UNIQUE,
    PRIMARY KEY(player_id),
    FOREIGN KEY(player_id)
        REFERENCES Roster(player_id)
);

