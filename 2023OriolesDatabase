DROP TABLE IF EXISTS Roster CASCADE;
DROP TABLE IF EXISTS Hitting CASCADE;
DROP TABLE IF EXISTS Pitching CASCADE;
DROP TABLE IF EXISTS Fielding CASCADE;


CREATE TABLE Roster(
	player_id SERIAL PRIMARY KEY,
	first_name VARCHAR(50) NOT NULL,
	last_name VARCHAR(50) NOT NULL,
	age SMALLINT,
	bats VARCHAR(10),
	throws VARCHAR(10),
    position VARCHAR(3)
);

CREATE TABLE Hitting(
	AB SMALLINT,
	H SMALLINT,
    AVG FLOAT,
	Singles SMALLINT,
	Doubles SMALLINT,
	Triples SMALLINT,
	HR SMALLINT,
	BB SMALLINT,
	HBP SMALLINT,
	SF SMALLINT,
	OBP FLOAT,
	SG FLOAT,
	OPS FLOAT,
    player_id INT UNIQUE,
    PRIMARY KEY(player_id),
    FOREIGN KEY(player_id)
        REFERENCES Roster(player_id)
);

CREATE TABLE Pitching(
	Wins SMALLINT,
	Losses SMALLINT,
	IP FLOAT,
	H SMALLINT,
	HR SMALLINT,
	ER SMALLINT,
	HB SMALLINT,
	BB SMALLINT,
	SO SMALLINT,
	ERA FLOAT,
	WHIP FLOAT,
    player_id INT UNIQUE,
    PRIMARY KEY(player_id),
    FOREIGN KEY(player_id)
        REFERENCES Roster(player_id)
);

CREATE TABLE Fielding(
	player_id INT UNIQUE,
		PRIMARY KEY(player_id),
		FOREIGN KEY(player_id)
			REFERENCES Roster(player_id),
	position VARCHAR(3),
	TC SMALLINT,
	E SMALLINT,
	PO SMALLINT,
	A SMALLINT
);