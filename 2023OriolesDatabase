CREATE TABLE Pitching(
	IP FLOAT,
	H SMALLINT,
	HR SMALLINT,
	ER SMALLINT,
	HB SMALLINT,
	BB SMALLINT,
	SO SMALLINT,
	ERA FLOAT,
	WHIP FLOAT,
    player_id INT UNIQUE,
    PRIMARY KEY(player_id),
    FOREIGN KEY(player_id)
        REFERENCES Roster(player_id)
);

INSERT INTO Pitching(player_id,IP,H,HR,ER,HB,BB,SO,ERA,WHIP) VALUES
